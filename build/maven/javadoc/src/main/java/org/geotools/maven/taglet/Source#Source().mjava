    /** Constructs a default <code>@source</code> taglet. */
    Source() {
        super();
        findModule =
                Pattern.compile(
                        "https?\\Q://\\E"
                                + // http or https
                                "[a-zA-Z\\.\\-]+"
                                + // host e.g. svn.osgeo.org
                                "\\/geotools"
                                + // /geotools
                                "\\/[a-z]+"
                                + // trunk or tags or branches
                                "(\\/[a-zA-Z0-9\\-\\_\\.]+)?"
                                + // group 1: tag or branch name or null if trunk
                                "\\/(((modules)\\/(library|plugin|extension|unsupported))|demo)"
                                + // groups 2 - 5
                                "\\/(.+)"
                                + // group 6: module name
                                "\\/src.*");
    }

