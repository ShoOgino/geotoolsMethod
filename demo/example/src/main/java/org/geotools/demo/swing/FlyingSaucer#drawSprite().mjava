    // This is the top-level animation method. It erases
    // the sprite (if showing), updates its position and then
    // draws it.
    private void drawSprite() {
        if (firstDisplay) {
            setSpritePosition();
            firstDisplay = false;
        }

        Graphics2D gr2D = (Graphics2D) getGraphics();
            eraseSprite(gr2D);
            moveSprite();
            paintSprite(gr2D);
    }

