    public void prepareScale(float value) {
        if (!scaleSet) return; 

        if (isMinMaxInitialized) {
            if (value < dataMin) {
                dataMin = value;
            }
            if (value > dataMax) {
                dataMax = value;
            }
        } else {
            dataMin = value;
            dataMax = value;
            isMinMaxInitialized = true;
        }
    }

