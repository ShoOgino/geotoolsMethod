    /**
     * @param value
     *
     * @return the input value, clamped to the 0..1 range.
     */
    public static float clampToZeroToOne( float value )
    {
        if ( value < 0 )
        {
            value = 0;
        }
        if ( value > 1 )
        {
            value = 1;
        }
        return value;
    }

