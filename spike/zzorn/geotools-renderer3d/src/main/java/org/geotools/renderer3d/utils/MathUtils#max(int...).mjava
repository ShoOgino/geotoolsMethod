    /**
     * @return the largest of the given numbers
     */
    public static int max( final int... numbers )
    {
        if ( numbers.length == 0 )
        {
            throw new IllegalArgumentException( "at least one parameter is required" );
        }

        int max = numbers[ 0 ];
        for ( int i = 1; i < numbers.length; i++ )
        {
            int number = numbers[ i ];
            if ( number > max )
            {
                max = number;
            }
        }

        return max;
    }

