        public void run()
        {
            while ( true )
            {
                myCanvas.repaint();

                // TODO: Instead of sleeping a fixed amount, we could try to sleep some amount to maintain some maximum FPS.
                try
                {
                    Thread.sleep( CANVAS_REPAINT_INTERVAL_MS );
                }
                catch ( InterruptedException e )
                {
                    // Ignore
                }
            }
        }

