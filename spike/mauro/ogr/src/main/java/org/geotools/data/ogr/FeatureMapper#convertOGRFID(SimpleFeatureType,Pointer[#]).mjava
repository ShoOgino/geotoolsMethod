    /**
     * Generates a GT2 feature id given its feature type and an OGR feature
     * 
     * @param schema
     * @param ogrFeature
     * @return
     */
    String convertOGRFID(SimpleFeatureType schema, Pointer<?> ogrFeature) {
        long id = OGR_F_GetFID(ogrFeature);
        return schema.getTypeName() + "." + id;
    }

