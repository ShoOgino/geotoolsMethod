    /** @see java.lang.Runnable#run() */
    public void run() {
        XMLHandlerHints hints = new XMLHandlerHints();
        initHints(hints);

        try {
            DocumentFactory.getInstance(document, hints);

            // start parsing until buffer part full, then yield();
        } catch (SAXException e) {
            exception = e;
            state = STOP;
            yield();
        }
    }

