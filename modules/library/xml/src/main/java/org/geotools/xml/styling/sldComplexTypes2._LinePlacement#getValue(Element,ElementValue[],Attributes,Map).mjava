                    continue;
                }
                Element e = value[i].getElement();
                if(elems[PERPENDICULAROFFSET].getName().equals(e.getName()))
                	offset = (Expression)value[i].getValue();
            }
        	
        	LinePlacement dlp = StyleFactoryFinder.createStyleFactory().createLinePlacement(offset);
        	return dlp;
        }

