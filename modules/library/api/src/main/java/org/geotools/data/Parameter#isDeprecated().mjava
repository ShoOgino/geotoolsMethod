    /**
     * Easy access to check the {@link #DEPRECATED} metadata
     *
     * @return provided deprecated or false by default
     */
    public Boolean isDeprecated() {
        if (metadata == null) {
            return false;
        }
        Boolean deprecated = (Boolean) metadata.get(DEPRECATED);
        if (deprecated == null) {
            return false;
        }
        return deprecated;
    }

