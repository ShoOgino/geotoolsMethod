    /**
     * Ensures that the specified longitude stay within 0 and {code}PI{code}.
     *
     * @param x An angle
     * @return The normalized angle
     */
    protected static double normalizeAngle(final double x) {
        return x - (2 * Math.PI) * Math.floor(x / (2 * Math.PI) + 0.5);
    }

