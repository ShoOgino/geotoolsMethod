    /**
     * Returns the detail message. A default message is formatted if none was specified at
     * construction time.
     */
    public String getMessage() {
        String message = super.getMessage();
        if (message == null) {
            Class c = unformattable;
            while (!Modifier.isPublic(c.getModifiers())) {
                final Class candidate = c.getSuperclass();
                if (candidate == null) {
                    break;
                }
                c = candidate;
            }
            return Errors.format(ErrorKeys.INVALID_WKT_FORMAT_$1, c);
        }
        return message;
    }

