    /** Set the width for the specified field. All folowing fields will be set to 0. */
    @SuppressWarnings("fallthrough")
    private void setWidth(final int index, int width) {
        switch (index) {
            case DEGREES_FIELD:
                width0 = width;
                width = 0; // fall through
            case MINUTES_FIELD:
                width1 = width;
                width = 0; // fall through
            case SECONDS_FIELD:
                width2 = width; // fall through
        }
    }

