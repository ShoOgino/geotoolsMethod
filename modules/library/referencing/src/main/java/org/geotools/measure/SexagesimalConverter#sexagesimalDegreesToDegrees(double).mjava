    public double sexagesimalDegreesToDegrees(double value) {
        value *= this.divider;
        int deg, min;
        deg = (int) (value / 10000);
        value -= 10000 * deg;
        min = (int) (value / 100);
        value -= 100 * min;
        if (min <= -60 || min >= 60) { // Accepts NaN
