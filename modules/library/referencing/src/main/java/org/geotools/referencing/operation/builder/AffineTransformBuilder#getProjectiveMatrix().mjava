    /**
     * Returns the matrix for Projective transformation setup as Affine. The M matrix looks like
     * this:
     *
     * <pre>
     * [  m00  m01  m02  ]
     * [  m10  m11  m12  ]
     * [   0    0    1   ]
     * </pre>
     *
     * @return Matrix M.
     */
    protected GeneralMatrix getProjectiveMatrix() {
        GeneralMatrix M = new GeneralMatrix(3, 3);
        double[] param = calculateLSM();
        double[] m0 = {param[0], param[1], param[2]};
        double[] m1 = {param[3], param[4], param[5]};
        double[] m2 = {0, 0, 1};
        M.setRow(0, m0);
        M.setRow(1, m1);
        M.setRow(2, m2);

        return M;
    }

