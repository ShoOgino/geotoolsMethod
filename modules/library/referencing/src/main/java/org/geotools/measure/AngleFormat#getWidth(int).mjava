    /** Returns the width of the specified field. */
    private int getWidth(final int index) {
        switch (index) {
            case DEGREES_FIELD:
                return width0;
            case MINUTES_FIELD:
                return width1;
            case SECONDS_FIELD:
                return width2;
            default:
                return 0; // Must be 0 (important!)
        }
    }

