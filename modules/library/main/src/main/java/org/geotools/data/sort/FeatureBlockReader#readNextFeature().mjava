    private SimpleFeature readNextFeature() throws IOException {
        if (count <= 0) {
            return null;
        }

        // move to the next feature offset
        io.seek(offset);

        // read the feature
        SimpleFeature sf = io.read();

        // update the offset for the next feature
        offset = io.getOffset();
        count--;

        // return the feature
        return sf;
    }

