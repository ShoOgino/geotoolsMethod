    /**
     * Set the transform from a flat matrix.
     *
     * @param matrix The flat matrix.
     * @param offset The index of the first element to use in <code>matrix</code>.
     */
    public void setTransform(final float[] matrix, int offset) {
        setTransform(
                matrix[offset],
                matrix[++offset],
                matrix[++offset],
                matrix[++offset],
                matrix[++offset],
                matrix[++offset]);
    }

