    @Override
    public int getArgumentCount() {
        int count = 0;
        int variable = 1;
        for (Parameter<?> argument : args) {
            if (argument.getMinOccurs() != argument.getMaxOccurs()) {
                variable = -1; // flag for variable arguments
            }
            count += argument.getMinOccurs();
        }
        return variable * count;
    }

