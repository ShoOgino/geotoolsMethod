        @Override
        public <T> T convert(Object source, Class<T> target) throws Exception {

            if (source == null) {
                return null;
            }

            String string = (String) source;

            for (String format : formats) {
                try {
                    return target.cast((new SimpleDateFormat(format)).parse(string));
                } catch (Exception ignore) {
                }
            }
            return null;
        }

