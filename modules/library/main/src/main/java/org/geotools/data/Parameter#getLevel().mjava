    /**
     * Easy access to check the {@link #LEVEL} metadata
     *
     * @return provided level or "user" by default
     */
    public String getLevel() {
        if (metadata == null) {
            return "user";
        }
        String level = (String) metadata.get(LEVEL);
        if (level == null) {
            return "user";
        }
        return level;
    }

