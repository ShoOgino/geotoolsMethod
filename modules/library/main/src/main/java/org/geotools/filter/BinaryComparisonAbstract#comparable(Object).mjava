    /**
     * Wraps an object in a Comparable.
     *
     * @param value The original value.
     * @return A comparable
     */
    protected final Comparable comparable(Object value) {
        if (value == null) {
            return null;
        } else if (value instanceof Comparable) {
            return (Comparable) value;
        } else {
            return String.valueOf(value);
        }
    }

