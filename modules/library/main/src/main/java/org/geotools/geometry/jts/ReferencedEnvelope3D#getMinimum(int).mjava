    /** Returns the minimal ordinate along the specified dimension. */
    public double getMinimum(final int dimension) {
        switch (dimension) {
            case 0:
                return getMinX();

            case 1:
                return getMinY();

            case 2:
                return getMinZ();

            default:
                throw new IndexOutOfBoundsException(String.valueOf(dimension));
        }
    }

