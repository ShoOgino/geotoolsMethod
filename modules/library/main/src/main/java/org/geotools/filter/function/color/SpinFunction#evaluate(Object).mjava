    @Override
    public Object evaluate(Object object) {
        Color color = (Color) getParameterValue(object, 0);
        double amount = (Double) getParameterValue(object, 1);

        HSLColor hsl = new HSLColor(color);
        double hue = (hsl.getHue() + amount) % 360;
        if (hue < 0) {
            hue = hue + 360;
        }
        hsl.setHue(hue);

        return hsl.toRGB();
    }

