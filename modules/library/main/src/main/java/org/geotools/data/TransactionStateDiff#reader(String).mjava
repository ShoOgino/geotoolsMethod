    public synchronized  FeatureReader<SimpleFeatureType, SimpleFeature> reader(String typeName)
        throws IOException {
        Diff diff = diff(typeName);
         FeatureReader<SimpleFeatureType, SimpleFeature> reader = store.getFeatureReader(typeName);

