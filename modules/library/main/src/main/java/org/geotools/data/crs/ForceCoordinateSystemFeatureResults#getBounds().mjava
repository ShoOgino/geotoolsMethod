    /** @see org.geotools.data.FeatureResults#getBounds() */
    public ReferencedEnvelope getBounds() {
        ReferencedEnvelope env = results.getBounds();
        if (env == null) {
            return null;
        }
        env = new ReferencedEnvelope(env, getSchema().getCoordinateReferenceSystem());
        return env;
    }

