    @Test
    public void testNestArrayObjects() {
        String json =
                "{\n"
                        + "  \"prop\": {\n" //
                        + "    \"a\": [\n" //
                        + "      {\n" //
                        + "        \"b\": 10\n" //
                        + "      },\n" //
                        + "      {\n" //
                        + "        \"b\": 20\n" //
                        + "      }\n" //
                        + "    ]\n" //
                        + "  }\n" //
                        + "}";

        assertEquals(Integer.valueOf(10), pointer(json, "/prop/a/0/b").evaluate(null));
        assertEquals(Integer.valueOf(20), pointer(json, "/prop/a/1/b").evaluate(null));
    }

