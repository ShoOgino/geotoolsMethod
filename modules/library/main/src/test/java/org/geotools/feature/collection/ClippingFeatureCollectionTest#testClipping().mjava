    @Test
    public void testClipping() {
        ClippingFeatureCollection clipping = new ClippingFeatureCollection(delegate);
        SimpleFeatureIterator it = clipping.features();
        try {
            int i = 0;
            while (it.hasNext()) {
                it.next();
                i++;
            }
            // first two points have been removed
            assertEquals(8, i);
        } finally {
            it.close();
        }
    }

