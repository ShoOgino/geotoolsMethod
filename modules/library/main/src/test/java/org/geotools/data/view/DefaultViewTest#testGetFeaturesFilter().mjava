    @Test
    public void testGetFeaturesFilter() throws Exception {

        SimpleFeatureSource view = getView();
        Filter f = getFilter();
        try (SimpleFeatureIterator features = view.getFeatures(f).features()) {
            int count = 0;
            while (features.hasNext()) {
                count++;
                features.next();
            }
            Assert.assertEquals(1, count);
        }
    }

