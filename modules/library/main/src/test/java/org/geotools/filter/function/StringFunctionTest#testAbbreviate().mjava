    @Test
    public void testAbbreviate() {
        assertEquals(
                "UNITED ...",
                ff.function(
                                "strAbbreviate",
                                ff.literal("UNITED KINGDOM"),
                                ff.literal(3),
                                ff.literal(6),
                                ff.literal(" ..."))
                        .evaluate(null));
        assertEquals(
                "UNITED ...",
                ff.function(
                                "strAbbreviate",
                                ff.literal("UNITED KINGDOM"),
                                ff.literal(6),
                                ff.literal(100),
                                ff.literal(" ..."))
                        .evaluate(null));
    }

