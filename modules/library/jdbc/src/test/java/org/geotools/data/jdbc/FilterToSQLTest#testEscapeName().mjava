    @Test
    public void testEscapeName() {
        encoder.setSqlNameEscape("\"");
        Assert.assertEquals("\"abc\"", encoder.escapeName("abc"));
        Assert.assertEquals("\"\"\"abc\"", encoder.escapeName("\"abc"));
        Assert.assertEquals("\"a\"\"bc\"", encoder.escapeName("a\"bc"));
        Assert.assertEquals("\"abc\"\"\"", encoder.escapeName("abc\""));
        encoder.setSqlNameEscape("");
        Assert.assertEquals("abc", encoder.escapeName("abc"));
    }

