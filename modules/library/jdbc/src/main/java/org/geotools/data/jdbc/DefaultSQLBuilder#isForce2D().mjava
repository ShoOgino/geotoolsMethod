    /** Check the hints to see if we are forced into 2D */
    public synchronized boolean isForce2D(){
        if( hints == null ){
            return false;
        }
        Boolean force2d = (Boolean) hints.get( Hints.FEATURE_2D );
        if(force2d == null ){
            return false;
        }
        return force2d.booleanValue();      
    }

