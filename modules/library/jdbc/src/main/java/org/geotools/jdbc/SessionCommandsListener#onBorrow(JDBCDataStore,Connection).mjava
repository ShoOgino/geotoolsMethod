    public void onBorrow(JDBCDataStore store, Connection cx) throws SQLException {
        if (sqlOnBorrow != null && !"".equals(sqlOnBorrow)) {
            String command = sqlOnBorrow.evaluate(null, String.class);
            Statement st = null;
            try {
                st = cx.createStatement();
                st.execute(command);
            } finally {
                store.closeSafe(st);
            }
        }
    }

