    public JDBCFeatureReader(
            ResultSet rs,
            Connection cx,
            int offset,
            JDBCFeatureSource featureSource,
            SimpleFeatureType featureType,
            Query query)
            throws SQLException {
        init(featureSource, featureType, query);

        this.cx = cx;
        this.st = rs.getStatement();
        this.rs = rs;
        this.offset = offset;
    }

