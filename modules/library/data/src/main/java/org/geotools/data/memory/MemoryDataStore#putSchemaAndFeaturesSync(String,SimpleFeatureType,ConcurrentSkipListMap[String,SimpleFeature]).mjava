    private void putSchemaAndFeaturesSync(String typeName,
            SimpleFeatureType featureType,
            ConcurrentSkipListMap<String, SimpleFeature> featureMap) {
        synchronized (schema) {
            schema.put(typeName, featureType);
        }
    
        synchronized (memory) {
            memory.put(typeName, featureMap);
        }
    }

