    /** Tear down method for test, calls through to {@link #disconnect()} if the test is active. */
    @Override
    protected final void tearDown() throws Exception {
        tearDownInternal();
        if (fixture != null) {
            try {
                disconnect();
            } catch (Exception e) {
                if (skipOnFailure) {
                    // do nothing
                } else {
                    throw e;
                }
            }
        }
    }

