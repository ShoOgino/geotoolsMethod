        @Override
        public String toString() {
            if (isGetRequest) {
                return "GET " + path + ", " + kvp;
            } else {
                return "POST "
                        + path
                        + ", "
                        + kvp
                        + (contentType == null
                                ? ""
                                : ", content type "
                                        + contentType
                                        + ", content "
                                        + new String(postContent, StandardCharsets.UTF_8));
            }
        }

