    public ImageWorker translate(float xTrans, float yTrans, Interpolation interp){
        ParameterBlock pb = new ParameterBlock();
        pb.addSource(image);
        pb.add(xTrans);
        pb.add(yTrans);
        pb.add(interp);
        image = JAI.create("Translate", pb, getRenderingHints());
        return this;
    }

