    private boolean inROI(int x, int y, RandomIter roiIter, boolean roiContainsTile){
        if(hasROI){
            if(roiContainsTile){
                return true;
            }
            return roiBounds.contains(x, y) && (roiIter.getSample(x, y, 0) > 0);
        }else{
            return true;
        }
    }

