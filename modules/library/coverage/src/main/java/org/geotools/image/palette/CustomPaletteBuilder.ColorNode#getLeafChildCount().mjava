        public int getLeafChildCount() {
            if (isLeaf) {
                return 0;
            }

            int cnt = 0;

            for (ColorNode child : children) {
                if (child != null) {
                    if (child.isLeaf) {
                        cnt++;
                    } else {
                        cnt += child.getLeafChildCount();
                    }
                }
            }

            return cnt;
        }

