    /**
     * Returns the valid maximum <strong>inclusive</strong> grid coordinate along the specified
     * dimension.
     *
     * @see #getHigh()
     */
    public int getHigh(final int dimension) {
        switch (dimension) {
            case 0:
                return x + width - 1;
            case 1:
                return y + height - 1;
            default:
                throw new IndexOutOfBoundsException(GridCoordinates2D.indexOutOfBounds(dimension));
        }
    }

