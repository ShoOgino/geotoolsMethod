        rainReader = new ArcGridReader(rainFile);

        // read a image with a roi (mask)
        coverageFile = TestData.copy(this, "geotiff/world-roi.tiff");
        assertTrue(coverageFile.exists());
        worldRoiReader = new GeoTiffReader(coverageFile);
