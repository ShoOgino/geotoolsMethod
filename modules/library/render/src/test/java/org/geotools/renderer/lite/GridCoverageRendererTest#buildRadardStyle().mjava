    private RasterSymbolizer buildRadardStyle() {
        StyleBuilder sb = new StyleBuilder();
        ColorMap cm =
                sb.createColorMap(
                        new String[] {"a", "b"},
                        new double[] {-20, 50},
                        new Color[] {Color.RED, Color.GREEN},
                        ColorMap.TYPE_RAMP);
        RasterSymbolizer rasterSymbolizer = sb.createRasterSymbolizer(cm, 1d);
        return rasterSymbolizer;
    }

