    private Geometry buildShiftedGeometry(Geometry g, double shiftX, double shiftY) {
        Geometry clone = g.copy();
        Coordinate[] coords = clone.getCoordinates();
        final int length = coords.length;
        for (Coordinate coord : coords) {
            coord.x += shiftX;
            coord.y += shiftY;
        }

        return clone;
    }

