    /**
     * Checks the pixel i/j has the specified color
     *
     * @param image
     * @param i
     * @param j
     * @param color
     */
    public static void assertPixel(BufferedImage image, int i, int j, Color color) {
        Color actual = getPixelColor(image, i, j);

        Assert.assertEquals(color, actual);
    }

