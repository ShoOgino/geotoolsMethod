    @Test
    public void paint() throws Exception {

        //
        // /////////////////////////////////////////////////////////////////
        //
        // CREATING A GRID COVERAGE
        //
        //
        // /////////////////////////////////////////////////////////////////
        final GridCoverage2D gc = getGC();

        //
        //
        // /////////////////////////////////////////////////////////////////
