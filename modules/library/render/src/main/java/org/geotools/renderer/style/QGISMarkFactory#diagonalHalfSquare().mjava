    private static Shape diagonalHalfSquare() {
        // (bottom-left half)

        GeneralPath path = new GeneralPath(GeneralPath.WIND_EVEN_ODD);
        path.moveTo(-.5f, -.5f);
        path.lineTo(.5f, -.5f);
        path.lineTo(-.5f, .5f);
        path.lineTo(-.5f, -.5f);

        ExplicitBoundsShape shape = new ExplicitBoundsShape(path);
        shape.setBounds(new Rectangle2D.Double(-.5, .5, 1., 1.));

        return shape;
    }

