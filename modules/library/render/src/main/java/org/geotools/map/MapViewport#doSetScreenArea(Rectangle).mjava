    private void doSetScreenArea(Rectangle screenArea) {
        if (screenArea == null || screenArea.isEmpty()) {
            this.screenArea = new Rectangle();
        } else {
            this.screenArea = new Rectangle(screenArea);
        }
        if (fixedBoundsOnResize) {
            setTransforms(true);
        } else {
            setTransforms(false);
        }
    }

