    /** */
    public Shape getHaloShape(Graphics2D graphics) {
        GlyphVector gv = getTextGlyphVector(graphics);
        haloShape =
                new BasicStroke(2f * haloRadius, BasicStroke.CAP_ROUND, BasicStroke.JOIN_ROUND)
                        .createStrokedShape(gv.getOutline());
        return haloShape;
    }

