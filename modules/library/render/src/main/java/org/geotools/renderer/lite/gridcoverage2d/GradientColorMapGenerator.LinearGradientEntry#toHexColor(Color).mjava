        /** 
         * Return an HEX representation of a Color
         * @param color
         * @return
         */
        private static String toHexColor(final Color color) {
            Utilities.ensureNonNull("color", color);
            String hexColour = Integer.toHexString(color.getRGB() & 0xffffff);
            return "#" + hexColour;
        }

