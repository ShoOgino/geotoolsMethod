    /**
     * Null safe options retrival
     *
     * @param symbolizer
     * @param optionName
     * @return
     */
    private String getOption(Symbolizer symbolizer, String optionName) {
        if (symbolizer == null) {
            return null;
        }
        Map<String, String> options = symbolizer.getOptions();
        if (options == null) {
            return null;
        } else {
            return options.get(optionName);
        }
    }

