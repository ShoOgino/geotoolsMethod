    public void setColor(int x, int r, int g, int b, int a) {
        // undo premultiply if required
        if (a != 255) {
            double mul = a / 255d;
            r = (int) Math.round(r / mul);
            g = (int) Math.round(g / mul);
            b = (int) Math.round(b / mul);
        }
        delegate.setColor(x, r, g, b, a);
    }

