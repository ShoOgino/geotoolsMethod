    /**
     * Set the title of this context.
     *
     * @param title the title.
     */
    public void setTitle(String title) {
        monitor.writeLock().lock();
        try {
            String old = this.title;
            this.title = title;
            fireProperty("title", old, title);

        } finally {
            monitor.writeLock().unlock();
        }
    }

