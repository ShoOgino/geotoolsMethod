    private Fill getBackgroundFromLayers() {
        // pick the first non null background specification
        return layers.stream()
                .flatMap(
                        l ->
                                Optional.ofNullable(l.getStyle())
                                        .map(s -> s.getBackground())
                                        .map(Stream::of)
                                        .orElseGet(Stream::empty))
                .findFirst()
                .orElse(null);
    }

