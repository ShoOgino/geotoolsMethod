    @Test(expected=IllegalStateException.class)
    public void testLoop() {
        PartiallyOrderedSet<String> poset = new PartiallyOrderedSet<>();
        poset.add("a");
        poset.add("b");
        poset.add("c");
        poset.setOrder("a", "b");
        poset.setOrder("b", "c");
        poset.setOrder("c", "a");
        
        // should throw an exception right away
        poset.iterator();
    }

