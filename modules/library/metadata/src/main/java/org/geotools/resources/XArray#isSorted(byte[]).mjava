    /**
     * Returns {@code true} if all elements in the specified array are in increasing order. This
     * method is usefull in assertions.
     */
    public static boolean isSorted(final byte[] array) {
        for (int i = 1; i < array.length; i++) {
            if (array[i] < array[i - 1]) {
                return false;
            }
        }
        return true;
    }

