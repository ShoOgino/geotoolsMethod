    /**
     * Returns {@code true} if the specified array contains at least one {@link Double#NaN NaN}
     * value.
     */
    public static boolean hasNaN(final double[] array) {
        for (int i = 0; i < array.length; i++) {
            if (Double.isNaN(array[i])) {
                return true;
            }
        }
        return false;
    }

