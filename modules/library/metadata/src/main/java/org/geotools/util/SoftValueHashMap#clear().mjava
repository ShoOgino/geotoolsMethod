    /**
     * Removes all mappings from this map.
     */
    @Override
    public void clear() {
        synchronized (hash) {
            for (final Iterator it=hash.values().iterator(); it.hasNext();) {
                final Object value = it.next();
                if (value instanceof Reference) {
                	((Reference) value).getAndClear();
                }
            }
            hash.clear();
            hardCache.clear();
        }
    }

