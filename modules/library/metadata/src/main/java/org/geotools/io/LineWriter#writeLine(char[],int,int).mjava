    /**
     * Writes a portion of an array of characters. This portion must <strong>not</strong> contains
     * any line separator.
     */
    private void writeLine(final char[] cbuf, final int lower, int upper) throws IOException {
        while (upper != lower) {
            final char c = cbuf[upper - 1];
            assert (c != '\r' && c != '\n');
            if (isWhitespace(c)) {
                upper--;
                continue;
            }
            flushBuffer();
            out.write(cbuf, lower, upper - lower);
            return;
        }
        assert bufferBlank();
        count = 0;
    }

