    /**
     * Logs a record at the specified level. The defaut implementation discards the source class and
     * source method, then delegates to <code>{@linkplain #log(Level,String) log}(level, message)
     * </code>.
     */
    @Override
    public void logp(
            final Level level,
            final String sourceClass,
            final String sourceMethod,
            final String message) {
        log(level, message);
    }

