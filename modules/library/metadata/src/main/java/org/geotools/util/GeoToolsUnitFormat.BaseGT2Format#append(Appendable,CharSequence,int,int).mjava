        private void append(Appendable appendable, CharSequence symbol, int pow, int root)
                throws IOException {
            appendable.append(symbol);
            if (pow != 1 || root != 1) {
                appendable.append('^');
                appendable.append(String.valueOf(pow));
                if (root != 1) {
                    appendable.append(':');
                    appendable.append(String.valueOf(root));
                }
            }
        }

