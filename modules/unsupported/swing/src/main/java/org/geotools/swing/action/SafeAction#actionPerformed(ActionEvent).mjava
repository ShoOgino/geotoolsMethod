    /**
     * Calls the {@linkplain #action } method
     *
     * @param e the action event
     */
    public void actionPerformed(ActionEvent e) {
        try {
            action( e );
        } catch (Throwable t) {
            ExceptionMonitor.show(e.getSource() instanceof Component ? (Component) e.getSource()
                    : null, t);
        }
    }

