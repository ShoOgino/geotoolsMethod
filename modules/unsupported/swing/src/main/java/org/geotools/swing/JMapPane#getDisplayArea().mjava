    /**
     * {@inheritDoc}
     */
    @Override
    public ReferencedEnvelope getDisplayArea() {
        if (mapContent != null) {
            return mapContent.getViewport().getBounds();
        } else if (pendingDisplayArea != null) {
            return new ReferencedEnvelope(pendingDisplayArea);
        } else {
            return new ReferencedEnvelope();
        }
    }

