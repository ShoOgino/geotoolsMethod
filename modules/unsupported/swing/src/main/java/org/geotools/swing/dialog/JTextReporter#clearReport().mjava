    /**
     * Clears the text area.
     */
    private void clearReport() {
        int len = textArea.getDocument().getLength();
        if (len > 0) {
            try {
                textArea.getDocument().remove(0, len);
            } catch (BadLocationException ex) {
                // this shouldn't happen
                throw new IllegalStateException(ex);
            }
        }
    }

