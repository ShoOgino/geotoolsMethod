        /**
         * Informs listeners of changed state.
         *
         * @param type type of change
         */
        private void fireEvent(StateChange type) {
            for (TextReporterListener listener : listeners) {
                switch (type) {
                    case DIALOG_CLOSED:
                        listener.onReporterClosed();
                        break;

                    case TEXT_UPDATED:
                        listener.onReporterUpdated();
                        break;
                }
            }
        }

