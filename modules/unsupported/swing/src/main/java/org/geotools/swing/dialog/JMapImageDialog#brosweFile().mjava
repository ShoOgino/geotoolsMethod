    /**
     * Display a {@code JFileImageChooser} to browse for the path and file
     * to save the image to
     */
    private void brosweFile() {
        File file = JFileImageChooser.showSaveFile(this);
        if (file != null) {
            selectedFile = file;
            fileField.setText(file.getAbsolutePath());
        }
    }

