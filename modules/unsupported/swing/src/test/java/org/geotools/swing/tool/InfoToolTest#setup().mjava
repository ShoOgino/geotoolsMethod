    @Before
    public void setup() {
        // We override onReporterUpdated to give tests access to
        // the reporter text
        tool =
                new InfoTool() {
                    @Override
                    public void onReporterUpdated() {
                        reporterText = getTextReporterConnection().getText();
                        if (latch != null) {
                            latch.countDown();
                        }
                    }
                };
    }

