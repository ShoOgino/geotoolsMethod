        public ImageFrameWithLatch(RenderedImage img, String title, CountDownLatch latch) {
            super(img, title);
            this.closeLatch = latch;

            addWindowListener(
                    new WindowAdapter() {
                        @Override
                        public void windowClosing(WindowEvent e) {
                            closeLatch.countDown();
                        }
                    });
        }

