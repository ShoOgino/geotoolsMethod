    @Test
    public void okButtonDisabledWhenListSelectionIsCleared() throws Exception {
        showDialog();
        
        // Make a list selection, then clear it
        JListFixture list = window.list();
        list.clickItem(0);
        window.robot.waitForIdle();

        list.clearSelection();
        window.robot.waitForIdle();
        
        getButton("OK").requireDisabled();
    }

