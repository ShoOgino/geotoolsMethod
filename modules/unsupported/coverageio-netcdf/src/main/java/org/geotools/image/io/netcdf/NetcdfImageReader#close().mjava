    /**
     * Closes the NetCDF file.
     *
     * @throws IOException If an error occured while accessing the NetCDF file.
     */
    @Override
    protected void close() throws IOException {
        metadataLoaded = false;
        streamMetadata = null;
        imageMetadata  = null;
        lastError      = null;
        variable       = null;
        if (dataset != null) {
            dataset.close();
            dataset = null;
        }
        super.close();
    }

