    /**
     * Returns the i-th value of the specified property, as a literal
     *
     * @param valueMap
     * @param name
     * @param i
     * @param defaultValue
     * @return
     */
    private String getLiteral(
            Map<String, List<Value>> valueMap, String name, int i, String defaultValue) {
        Value v = getValue(valueMap, name, i);
        if (v == null) {
            return defaultValue;
        } else {
            return v.toLiteral();
        }
    }

