    /**
     * Builds an expression out of the i-th value
     *
     * @param valueMap
     * @param name
     * @param i
     * @return
     */
    private Expression getExpression(Map<String, List<Value>> valueMap, String name, int i) {
        Value v = getValue(valueMap, name, i);
        return getExpression(v);
    }

