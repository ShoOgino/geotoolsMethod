        /** Used to request a text format. */    
        private void columnGeometry(StringBuffer sql,
                GeometryDescriptor geometryAttribute, final int D) {
            if( D == 3 && !isForce2D() ){
                sql.append("asEWKT(");
            }
            else {
                sql.append("asText(");
            }
            columnGeometry(sql, geometryAttribute.getLocalName(), D );
            sql.append(")");
        }

