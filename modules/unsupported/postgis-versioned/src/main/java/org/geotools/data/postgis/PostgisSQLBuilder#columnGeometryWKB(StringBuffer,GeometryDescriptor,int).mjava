        /** Used when plain WKB is enabled */   
        private void columnGeometryWKB(StringBuffer sql,
                GeometryDescriptor geometryAttribute, final int D) {
            
            if( D == 3 ){
                sql.append("asEWKB(");
            }
            else {
                sql.append("asBinary(");
            }
            columnGeometry(sql, geometryAttribute.getLocalName(), D );
            sql.append(",'XDR')");
        }

