    /**
     * Returns (and eventually builds) the dirty fid set for the specified type name
     */
    Set<String> getCreateDirtyFids(String typeName) {
        Set fids = (Set) dirtyFids.get(typeName);
        if(fids == null) {
            fids = new HashSet();
            dirtyFids.put(typeName, fids);
        }
        return fids;
    }

