    /**
     * Copies to the specified list the tiles in this node and every children nodes.
     */
    final void getTiles(final List<Tile> tiles) {
        if (tile != null) {
            tiles.add(tile);
        }
        TreeNode child = firstChildren;
        while (child != null) {
            child.getTiles(tiles);
            child = child.nextSibling;
        }
    }

