    /**
     * Returns the cost of children only, not including the {@linkplain #tile} in this node.
     */
    private long childrenCost() {
        long c = 0;
        SelectedNode child = (SelectedNode) firstChildren();
        while (child != null) {
            c += child.cost;
            child = (SelectedNode) child.nextSibling();
        }
        assert cost >= c;
        return c;
    }

