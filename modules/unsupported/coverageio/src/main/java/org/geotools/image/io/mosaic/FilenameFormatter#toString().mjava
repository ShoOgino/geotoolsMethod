    /**
     * Returns the pattern.
     */
    @Override
    public String toString() {
        return (prefix != null ? prefix : DEFAULT_PREFIX) +
                "{level:"  + levelFieldSize  + '}' + levelSeparator +
                "{column:" + columnFieldSize + '}' + locationSeparator +
                "{row:"    + rowFieldSize    + '}' + suffix;
    }

