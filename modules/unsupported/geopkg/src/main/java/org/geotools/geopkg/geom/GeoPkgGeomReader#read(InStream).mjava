    protected Geometry read(InStream input) throws IOException {
        // read the header
        GeometryHeader h = readHeader(input);
        
        // read the geometry
        try {
            Geometry g = new WKBReader().read(input);
            g.setSRID(h.getSrid());
            return g;
        } catch (ParseException e) {
            throw new IOException(e);
        }
    }

