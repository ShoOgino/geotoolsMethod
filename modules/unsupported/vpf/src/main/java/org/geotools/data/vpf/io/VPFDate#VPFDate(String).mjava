    /**
     * Creates a new <code>VPFDate</code> instance.
     *
     * @param date a <code>String</code> value
     */
    public VPFDate(String date) {
        dateBin = new byte[date.length()];

        for (int i = 0; i < date.length(); i++) {
            dateBin[i] = (byte) date.charAt(i);
        }

        initialize();
    }

