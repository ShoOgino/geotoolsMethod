    private String getNodeAttribute(Node node, String attrName) {
        String emptyString = "";
        NamedNodeMap attrs = node.getAttributes();
        if (attrs == null) {
            return emptyString;
        }

        Node attrNode = attrs.getNamedItem(attrName);
        if (attrNode == null) {
            return emptyString;
        }
        return attrNode.getNodeValue();
    }

