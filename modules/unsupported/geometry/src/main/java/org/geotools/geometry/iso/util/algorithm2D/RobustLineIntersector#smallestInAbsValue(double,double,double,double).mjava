    private double smallestInAbsValue(double x1, double x2, double x3, double x4) {
        double x = x1;
        double xabs = Math.abs(x);
        if (Math.abs(x2) < xabs) {
            x = x2;
            xabs = Math.abs(x2);
        }
        if (Math.abs(x3) < xabs) {
            x = x3;
            xabs = Math.abs(x3);
        }
        if (Math.abs(x4) < xabs) {
            x = x4;
        }
        return x;
    }

