    public BRepNode2D getNextPoint(BRepNode2D v0, BRepNode2D v1) {
        // returns the next vertex after v0 and v1
        for (int i = 0; i < n(); ++i) {
            if (node[i] == v0) {
                if (node[(i + 1) % n()] == v1) return node[(i + 2) % n()];
                else if (node[(i + n() - 1) % n()] == v1) return node[(i + n() - 2) % n()];
                else return null;
            }
        }
        return null;
    }

