        // contains position at distance, is found
        int i = 0;
        while (this.curveSegments.get(i).getEndParam() < distance && i < curveSegments.size()) {
            i++;
        }
        /* Delegate work to according LineString */
        return this.curveSegments.get(i).getTangent(distance);
    }

