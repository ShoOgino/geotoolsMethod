        DirectPosition four =
                positionFactory.createDirectPosition(
                        one.getCoordinate()); // new DirectPositionImpl( one );
        four.setOrdinate(D, bounds.getMaximum(D));

        LineSegment edge1 = new LineSegmentImpl(one, two, 0.0);
