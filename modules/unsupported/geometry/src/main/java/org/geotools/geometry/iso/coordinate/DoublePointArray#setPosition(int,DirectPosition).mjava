    public void setPosition(int index, DirectPosition position)
            throws IndexOutOfBoundsException, UnsupportedOperationException {
        // note: tempting to use System arraycopy on position.getCoordinates() but that would make
        // an temporary extra array
        int D = getDimension();
        for (int i = 0; i < D; i++) {
            array[start + index * D + i] = position.getOrdinate(i);
        }
    }

