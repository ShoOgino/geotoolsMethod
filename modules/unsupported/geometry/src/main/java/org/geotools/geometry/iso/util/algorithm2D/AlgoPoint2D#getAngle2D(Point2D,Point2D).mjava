	public static double getAngle2D(Point2D p0, Point2D p1) {
		//             * p1
		//            /
		//           /    
		//          /
		//         *------>*
		//       (0,0)    p0
		double angle = Math.atan2(p1.getY(), p1.getX())
				- Math.atan2(p0.getY(), p0.getX());
		if (angle < 0.0)
			angle = angle + 2 * Math.PI;
		if (angle > (2 * Math.PI))
			angle = angle - 2 * Math.PI;
		return angle;
	}

