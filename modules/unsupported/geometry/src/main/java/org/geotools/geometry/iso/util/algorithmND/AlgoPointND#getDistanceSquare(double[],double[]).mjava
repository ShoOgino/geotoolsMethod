    /**
     * Returns the square of the distance between two points
     *
     * @return double
     */
    public static double getDistanceSquare(double[] p0, double[] p1) {
        double sum = 0.0;
        for (int i = 0, n = p0.length; i < n; ++i) {
            double a = p1[i] - p0[i];
            sum += a * a;
        }
        return sum;
    }

