     * will acquire a complete labelling (i.e. one with labels for both Geometries) only if they are
     * incident on a node which has edges for both Geometries
     */
    private void computeLabelling() {
        for (Iterator nodeit = graph.getNodes().iterator(); nodeit.hasNext(); ) {
            Node node = (Node) nodeit.next();
            // if (node.getCoordinate().equals(new Coordinate(222, 100)) )
            // Debug.addWatch(node.getEdges());
            node.getEdges().computeLabelling(arg);
        }
        mergeSymLabels();
        updateNodeLabelling();
    }

