    /**
     * Writes an Envelope instance as GeoJSON returning the result as a string.
     *
     * @param e The envelope
     * @return The envelope encoded as GeoJSON
     */
    public String toString(Envelope e) {
        return new StringBuffer()
                .append("[")
                .append(e.getMinX())
                .append(",")
                .append(e.getMinY())
                .append(",")
                .append(e.getMaxX())
                .append(",")
                .append(e.getMaxY())
                .append("]")
                .toString();
    }

