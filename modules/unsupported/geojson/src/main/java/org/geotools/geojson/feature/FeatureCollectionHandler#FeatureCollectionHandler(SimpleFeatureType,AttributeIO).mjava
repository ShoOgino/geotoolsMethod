    public FeatureCollectionHandler(SimpleFeatureType featureType, AttributeIO attio) {
        if (featureType != null) {
            builder = new SimpleFeatureBuilder(featureType);
        }

        if (attio == null) {
            if (featureType != null) {
                attio = new FeatureTypeAttributeIO(featureType);
            } else {
                attio = new DefaultAttributeIO();
            }
        }

        this.attio = attio;
    }

