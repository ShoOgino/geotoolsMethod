    @Override
    protected int getCountInternal(Query query) throws IOException {
        int count = 0;
        FeatureReader<SimpleFeatureType, SimpleFeature> featureReader = getReaderInternal(query);
        try {
            while (featureReader.hasNext()) {
                featureReader.next();
                count++;
            }
        } finally {
            featureReader.close();
        }
        return count;
    }

