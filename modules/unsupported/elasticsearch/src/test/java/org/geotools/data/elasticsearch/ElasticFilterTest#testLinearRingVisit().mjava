    @Test
    public void testLinearRingVisit() {
        final Geometry ring =
                gf.createLinearRing(
                        new Coordinate[] {
                            new Coordinate(0, 0),
                            new Coordinate(1, 1),
                            new Coordinate(1, 0),
                            new Coordinate(0, 0)
                        });
        builder.visit(ff.literal(ring), null);

        assertEquals("LineString", builder.currentGeometry.getGeometryType());
    }

