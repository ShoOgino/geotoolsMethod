    /**
     * Extracts a slice of a grid along the Y dimension (a column)
     * 
     * @param grid
     * @param y
     * @return
     */
    private float[] sliceY(float[][] grid, int x) {
        float[] slice = new float[grid[0].length];
        for (int i = 0; i < slice.length; i++) {
            slice[i] = grid[x][i];
        }
        return slice;
    }

