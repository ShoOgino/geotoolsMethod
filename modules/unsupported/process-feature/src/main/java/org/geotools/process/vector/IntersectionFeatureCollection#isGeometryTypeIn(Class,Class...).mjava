    /**
     * Checks if the specified class is same, or subclass, of any of the specified target classes
     * 
     * @param test
     * @param targets
     * @return
     */
    static boolean isGeometryTypeIn(Class test, Class... targets) {
        for (Class target : targets) {
            if (target.isAssignableFrom(test)) {
                return true;
            }
        }
        return false;
    }

