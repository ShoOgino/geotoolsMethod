    /**
     * Returns the JDBC url used for connecting to a specific database
     */
    public static String getJDBCUrl(String host, int port, String database) {
    	String url = null;
    	if (port == 0) {
    		url = "jdbc:db2:" + database;
    	} else {
    		url = "jdbc:db2://" + host + ":" + port + "/" + database;
    	}
        return url;
    }

