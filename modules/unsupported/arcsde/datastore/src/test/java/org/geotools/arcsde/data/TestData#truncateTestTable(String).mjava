    public void truncateTestTable(final String tempTableName)
            throws IOException, DataSourceException, UnavailableConnectionException {
        final ISessionPool connPool = getConnectionPool();
        final ISession session = connPool.getSession();

        try {
            session.issue(
                    new Command<Void>() {
                        @Override
                        public Void execute(ISession session, SeConnection connection)
                                throws SeException, IOException {
                            SeTable table;
                            try {
                                table = session.getTable(tempTableName);
                            } catch (IOException e) {
                                // table does not exist, its ok.
                                return null;
                            }
                            table.truncate();
                            return null;
                        }
                    });
        } finally {
            session.dispose();
        }
    }

