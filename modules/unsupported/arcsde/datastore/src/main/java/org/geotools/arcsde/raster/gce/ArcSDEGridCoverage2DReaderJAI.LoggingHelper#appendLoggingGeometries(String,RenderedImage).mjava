        public void appendLoggingGeometries(String geomName, RenderedImage img) {
            if (LOGGER.isLoggable(GEOM_LEVEL)) {
                appendLoggingGeometries(
                        geomName,
                        new GridEnvelope2D(
                                img.getMinX(), img.getMinY(), img.getWidth(), img.getHeight()));
            }
        }

