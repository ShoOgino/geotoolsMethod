    public static Link buildLink(ObjectNode node) {
        Link link = new Link();
        link.href = node.get("href").asText();
        link.type = node.get("type").asText();
        if (node.has("title")) {
            link.title = node.get("title").asText();
        }
        if (node.has("rel")) {
            link.rel = node.get("rel").asText();
        }

        return link;
    }

