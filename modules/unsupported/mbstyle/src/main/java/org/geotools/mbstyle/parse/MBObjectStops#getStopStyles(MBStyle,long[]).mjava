    static MBStyle getStopStyles(MBStyle style, long[] range) {
        for (MBLayer layer : style.layers()) {
            if (layer.getPaint() != null) {
                traverse(layer.getPaint(), range);
            }
            if (layer.getLayout() != null) {
                traverse(layer.getLayout(), range);
            }
        }
        return style;
    }

