    public static String read(File f) throws FileNotFoundException {
        String text = null;
        Scanner s = new Scanner(f);
        try {
            text = s.useDelimiter("\\Z").next();
        } finally {
            s.close();
        }
        if (f.getName().endsWith(".json")) {
            // strip comments
            text = stripComments(text);
        }
        return text;
    }

