    /**
     * If the fid index can be used and it is missing this method will try to create it
     * 
     * @return
     */
    boolean hasFidIndex() {
        if (isIndexUseable(FIX)) {
            return true;
        } else {
            if (shpFiles.isLocal()) {
                return createFidIndex();
            } else {
                return false;
            }

        }
    }

