    /** Reset the map area to include the full extent of all layers and redraw the display */
    public void reset() {
        if (fullExtent == null) {
            setFullExtent();
        }
        try {
            fullExtent =
                    new ReferencedEnvelope(
                            CRS.transform(fullExtent, content.getCoordinateReferenceSystem()));
        } catch (Exception e) {
            e.printStackTrace();
        }
        setDisplayArea(fullExtent);
    }

