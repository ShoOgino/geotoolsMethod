    /**
     * Returns the min scale of the default rule, or 0 if none is set 
     */
    public static double minScale( FeatureTypeStyle fts ) {
        if (fts == null || fts.rules().size() == 0)
            return 0.0;

        Rule r = fts.rules().get(0);
        return r.getMinScaleDenominator();
    }

