    /**
     * Called when a map layer has been removed
     */
    public void layerRemoved( MapLayerListEvent event ) {
        Layer layer = event.getElement();
        if (layerTable != null) {
            layerTable.onRemoveLayer(layer);
        }

        if (content.layers().size() == 0) {
            clearFields();
        } else {
            setFullExtent();
        }

        redraw();
    }

