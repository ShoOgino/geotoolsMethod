    /** Expands envelopes to include the specified location */
    public void expandToInclude(MBTilesTileLocation loc) {
        if (isNull()) {
            minX = maxX = loc.getTileColumn();
            minY = maxY = loc.getTileRow();
        } else {
            long x = loc.getTileColumn();
            long y = loc.getTileRow();
            if (x < minX) {
                minX = x;
            } else if (x > maxX) {
                maxX = x;
            }
            if (y < minY) {
                minY = y;
            } else if (y > maxY) {
                maxY = y;
            }
        }
    }

