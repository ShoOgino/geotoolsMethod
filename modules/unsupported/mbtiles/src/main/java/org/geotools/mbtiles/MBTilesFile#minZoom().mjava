    public long minZoom() throws SQLException {
        long zoom = 0;

        try (Connection cx = connPool.getConnection();
                Statement st = cx.createStatement();
                ResultSet rs = st.executeQuery("SELECT MIN(zoom_level) FROM " + TABLE_TILES)) {
            if (rs.next()) {
                zoom = rs.getLong(1);
            }
        }
        return zoom;
    }

