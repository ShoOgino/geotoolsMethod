    public long closestZoom(long zoomLevel) throws SQLException {
        long zoom = 0;
        try (Connection cx = connPool.getConnection();
                PreparedStatement ps =
                        prepare(
                                        cx,
                                        format(
                                                "SELECT zoom_level FROM %s ORDER BY abs(zoom_level - ?)",
                                                TABLE_TILES))
                                .set(zoomLevel)
                                .statement();
                ResultSet rs = ps.executeQuery()) {
            if (rs.next()) {
                zoom = rs.getLong(1);
            }
        }
        return zoom;
    }

