    /**
     * Initializes the mbtiles database.
     * <p>
     * This method creates all the necessary tables.
     * </p>
     */
    public void init() throws IOException {
        try {
            Connection cx = connPool.getConnection();
            try {
                init(cx);
            } finally {
                cx.close();
            }
        } catch (SQLException e) {
            throw new IOException(e);
        }
    }

