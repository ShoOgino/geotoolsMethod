    public void close() {
        // already closed?
        if (source == null) {
            return;
        }

        // return to the pool or destroy
        if (pool != null) {
            try {
                pool.returnObject(this);
            } catch (Exception e) {
                // in case returning to the pool fails, destroy the source
                destroy();
            }
        } else {
            destroy();
        }
    }

