    private static double[] buildScaleList(TileMatrixSet tileMatrixSet) {

         double[] scaleList = new double[tileMatrixSet.size()];
         int j = 0;
         for (TileMatrix tm : tileMatrixSet.getMatrices()) {
             scaleList[j++] = tm.getDenominator();
         }

         return scaleList;
    }

