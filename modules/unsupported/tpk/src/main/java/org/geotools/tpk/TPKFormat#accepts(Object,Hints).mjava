    @Override
    public boolean accepts(Object source, Hints hints) {
        if (source == null) {
            return false;
        }

        File sourceFile = getFileFromSource(source);

        if (sourceFile == null) {
            return false;
        }

        // accept files ending with either .tpk or .tpkx
        return sourceFile.getName().matches("^.*\\.tpkx*$");
    }

