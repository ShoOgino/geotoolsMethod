    @Override
    public SimpleFeature next()
            throws IOException, IllegalArgumentException, NoSuchElementException {
        if (next == null) {
            if (!hasNext()) {
                throw new NoSuchElementException("No more features to be read");
            }
        }

        checkException();
        SimpleFeature result = null;
        result = next;
        next = null;
        return result;
    }

