    @Override
    public void close() throws IOException {
        queue.shutDown();
        // wait for all the workers to get out of dodge, they might be blocked
        // on a full queue for example
        while(!queue.isDone()) {
            queue.clear();
            try {
                Thread.sleep(10);
            } catch (InterruptedException e) {
                // TODO Auto-generated catch block
                e.printStackTrace();
            }
        }
    }

