    /**
     * Convert CQL LIKE to Geotools Filter
     *
     * @param like CQL
     * @return GeoTools Filter
     */
    public Filter convertLike(Like like) {
        return filterFactory.like(
                filterFactory.property(like.getProperty()),
                like.getValue().toString(),
                like.getWildcard(),
                like.getSingleChar(),
                like.getEscape());
    }

