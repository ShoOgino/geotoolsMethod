    @Override
    public SimpleFeature next()
            throws IOException, IllegalArgumentException, NoSuchElementException {
        SimpleFeature feature = null;
        if (nextFeature != null) {
            feature = nextFeature;
            nextFeature = null;
        } else {
            if (isEmpty) throw new NoSuchElementException();
            feature = it.next();
        }
        return feature;
    }

