        public GeometryAttribute getDefaultGeometryProperty() {
            // Get EFeatureGeometry structure
            //
            EFeatureGeometry<Geometry> eGeometry = newGeometry(getDefault(), Geometry.class);
            //
            // Found geometry?
            //
            if (eGeometry != null) {
                // Get attribute
                //
                return eGeometry.getData();
            }

            // Not found, return null;
            //
            return null;
        }

