    public static CoordinateReferenceSystem decode(String srid)
            throws NoSuchAuthorityCodeException, FactoryException {
        CoordinateReferenceSystem crs = cache.get(srid);
        if (crs == null) {
            //
            // Decode srid into a CRS instance
            //
            crs = CRS.decode(srid);
            //
            // Add to cache
            //
            cache.put(srid, crs);
        }
        return crs;
    }

