    @SuppressWarnings("unchecked")
    public static <T> IDataTypeAdapter<T> getAdapter(Class<T> type) {
        if (!nameMap.containsKey(type)) {
            List<Class<T>> types = getSubTypes(type);
            if (types.size() == 0) {
                return null;
            }
            type = types.get(0);
        }
        return (IDataTypeAdapter<T>) getAdapter(type.getName());
    }

