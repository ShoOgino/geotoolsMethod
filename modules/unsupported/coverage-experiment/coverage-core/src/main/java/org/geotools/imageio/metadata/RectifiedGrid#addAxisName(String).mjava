    /**
     * Adds an {@code AxisName} to the {@code RectifiedGrid/AxesNames} node.
     * 
     * @param name
     *                The axis name, or {@code null} if unknown.
     */
    public AxisName addAxisName(final String name) {
        final AxisName axis = axesName.addChild();
        axis.setName(name);
        return axis;
    }

