    private static double[] getColour(String colorRampType, double v, double vmin, double vmax) {
        double[] c = new double[] { 1.0, 1.0, 1.0 }; // white
        
        if (colorRampType.equals("hot-color-ramp")) {
            c = getHotRampColor(v, vmin, vmax);
        }
        
        return c;
    }

