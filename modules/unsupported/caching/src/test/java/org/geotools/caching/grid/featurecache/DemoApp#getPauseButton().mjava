    JButton getPauseButton() {
        if (pauseButton == null) {
            pauseButton = new JButton("Start");
            pauseButton.addMouseListener(
                    new MouseListener() {
                        public void mouseClicked(MouseEvent e) {
                            if (task_wait) {
                                pauseButton.setText("Pause");
                            } else {
                                pauseButton.setText("Resume");
                            }

                            task_wait = !task_wait;
                        }

