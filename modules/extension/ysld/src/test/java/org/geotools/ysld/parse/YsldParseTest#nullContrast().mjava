    @SuppressWarnings({"rawtypes", "unchecked"})
    static Matcher<ContrastEnhancement> nullContrast() {
        return (Matcher)
                describedAs(
                        "Null Contrast Enhancement",
                        anyOf(
                                nullValue(),
                                allOf(
                                        hasProperty("gammaValue", nilExpression()),
                                        hasProperty(
                                                "method",
                                                anyOf(nullValue(), is(ContrastMethod.NONE))))));
    }

