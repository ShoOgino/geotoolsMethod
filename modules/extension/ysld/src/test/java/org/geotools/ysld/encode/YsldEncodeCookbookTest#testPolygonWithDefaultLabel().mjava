                obj.seq("feature-styles")
                        .map(0)
                        .seq("rules")
                        .map(0)
                        .seq("symbolizers")
                        .map(0)
                        .map("polygon");
        YamlMap text =
                obj.seq("feature-styles")
                        .map(0)
                        .seq("rules")
                        .map(0)
                        .seq("symbolizers")
                        .map(1)
                        .map("text");

        assertThat(poly.get("fill-color"), isColor("40FF40"));
        assertThat(poly.get("stroke-color"), isColor("FFFFFF"));
