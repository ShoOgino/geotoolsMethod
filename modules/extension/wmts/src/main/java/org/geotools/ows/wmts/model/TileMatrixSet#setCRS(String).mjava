    public void setCRS(String crs) throws IllegalArgumentException {
        try {
            this.coordinateReferenceSystem = parseCoordinateReferenceSystem(crs);
        } catch (Exception ex) {
            throw new IllegalArgumentException(
                    "Can't parse crs " + crs + ":" + ex.getMessage(), ex);
        }

        this.crs = crs;
    }

