        /**
         * Returns the next related edge.
         *
         * @see Iterator#next()
         */
        @Override
        public Graphable next() {
            switch (m_mode) {
                case IN:
                    return (m_in.getInEdgeArray()[m_index++]);
                case OUT:
                    return (m_out.getOutEdgeArray()[m_index++]);
            }

            return (null);
        }

