    public static double averageDistance(LineString to, Collection from) {
        double avg = 0;
        int n = 0;
        for (Object o : from) {
            LineString ls = (LineString) o;
            n += ls.getNumPoints();
            for (int i = 0; i < ls.getNumPoints(); i++) {
                avg += ls.getPointN(i).distance(to);
            }
        }
        return (avg / ((double) n));
    }

