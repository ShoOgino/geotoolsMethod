    /**
     * Resets the visited flag and counts of all nodes of the graph.
     *
     * @see GraphTraversal#init()
     */
    public void init() {
        // initialize the nodes of the graph
        m_graph.visitNodes(
                new GraphVisitor() {
                    public int visit(Graphable component) {
                        component.setVisited(false);
                        component.setCount(0);
                        return (0);
                    }
                });
    }

