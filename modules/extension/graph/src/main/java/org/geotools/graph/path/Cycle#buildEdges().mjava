    protected List<Edge> buildEdges() {
        List<Edge> edges = super.buildEdges();

        // get the edge between the first and last nodes
        Node first = (Node) get(0);
        Node last = (Node) get(size() - 1);

        Edge e = first.getEdge(last);
        if (e != null) {
            edges.add(e);
            return edges;
        }

        return null;
    }

