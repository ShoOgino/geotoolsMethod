    /**
     * Adds a directed edge to the graph.
     *
     * @see DirectedEdge
     * @see GraphBuilder#addEdge(Edge)
     */
    public void addEdge(Edge edge) {
        DirectedEdge de = (DirectedEdge) edge;
        de.getInNode().addOut(de);
        de.getOutNode().addIn(de);
        getEdges().add(de);
    }

