    private SimpleFeature road(String road, int id, String name) throws IllegalAttributeException {
        Coordinate[] coords =
                new Coordinate[] {
                    new Coordinate(1, 1),
                    new Coordinate(2, 2),
                    new Coordinate(4, 2),
                    new Coordinate(5, 1)
                };
        return SimpleFeatureBuilder.build(
                type,
                new Object[] {
                    Integer.valueOf(id), gf.createLineString(coords), name,
                },
                type.getTypeName() + "." + road);
    }

