    /**
     * Called to clear the internal cache of this layer; and any children.
     */
    public void clearCache() {
        allSRSCache = null;
        allExtentsCache = null;
        allDimensionsCache = null;
        allBoundingBoxesCache = null;
        envelopeCache.clear();
        for( Layer child : children ){
            child.clearCache();
        }
    }

