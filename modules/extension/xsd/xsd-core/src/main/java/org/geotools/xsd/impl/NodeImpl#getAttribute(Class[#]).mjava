    @Override
    public Node getAttribute(Class<?> clazz) {
        if (clazz == null) {
            return null;
        }

        for (Node att : attributes) {
            if (att.getValue() == null) {
                continue;
            }

            if (clazz.isAssignableFrom(att.getValue().getClass())) {
                return att;
            }
        }

        return null;
    }

