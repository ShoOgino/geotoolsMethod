    public <T> List<T> getChildValues(Class<T> clazz) {
        List<T> matches = new ArrayList<>();

        if (clazz == null) {
            return matches;
        }

        for (Node child : children) {
            Object parsed = child.getValue();

            if (parsed == null) {
                continue;
            }

            if (clazz.isAssignableFrom(parsed.getClass())) {
                matches.add(clazz.cast(parsed));
            }
        }

        return matches;
    }

