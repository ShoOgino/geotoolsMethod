        @Override
        public String getType(String uri, String localName) {
            for (int i = 0; i < pp.getAttributeCount(); i++) {
                if (pp.getAttributeNamespace(i).equals(uri)
                        && pp.getAttributeLocalName(i).equals(localName)) {
                    return pp.getAttributeType(i);
                }
            }
            return null;
        }

