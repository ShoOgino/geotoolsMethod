    public List<Node> getAttributes(Class<?> clazz) {
        List<Node> matches = new ArrayList<>();

        if (clazz == null) {
            return matches;
        }

        for (Node att : attributes) {
            if (att.getValue() == null) {
                continue;
            }

            if (clazz.isAssignableFrom(att.getValue().getClass())) {
                matches.add(att);
            }
        }

        return matches;
    }

