        @Override
        public String getLocalName(int index) {
            String local = atts.item(index).getLocalName();
            if (nullOrEmpty(local)) {
                // check the qname
                String qName = getQName(index);
                if (!nullOrEmpty(qName)) {
                    int dot = qName.indexOf(':');
                    if (dot > -1) {
                        local = qName.split(":")[1];
                    }
                }
            }

            return emptyIfNull(local);
        }

