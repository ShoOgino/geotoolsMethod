    public boolean hasAttribute(Class<?> clazz) {
        if (clazz == null) {
            return false;
        }

        for (Node att : attributes) {
            if (att.getValue() == null) {
                continue;
            }

            if (clazz.isAssignableFrom(att.getValue().getClass())) {
                return true;
            }
        }

        return false;
    }

