    void position(double x, double y, double z, StringBuffer sb) {
        sb.setLength(0);
        appendDecimal(x);
        if (!Double.isNaN(y)) {
            sb.append(" ");
            appendDecimal(y);
        }
        if (!Double.isNaN(z)) {
            sb.append(" ");
            appendDecimal(z);
        }
    }

