    @Override
    public Object getProperty(Object object, QName name) {
        // hack for xlink stuff
        Geometry geometry = (Geometry) object;
        if (geometry.isEmpty()) {
            return null;
        }

        if ("pos".equals(name.getLocalPart())) {
            Point point = (Point) object;
            return point.getCoordinateSequence();
        }

        return null;
    }

