    private int size(FeatureCollection<FeatureType, Feature> features) {
        // return features.size(); // JG: why are you not doing this?
        int size = 0;
        FeatureIterator<Feature> i = features.features();
        try {
            for (; i.hasNext(); i.next()) {
                size++;
            }
        } finally {
            i.close();
        }
        return size;
    }

