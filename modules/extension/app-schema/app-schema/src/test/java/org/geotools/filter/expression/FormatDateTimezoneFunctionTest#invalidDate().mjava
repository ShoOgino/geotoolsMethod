    /**
     * Test for helpful exception detail if date is invalid.
     */
    @Test
    public void invalidDate() {
        try {
            ff.function(FormatDateTimezoneFunction.NAME.getFunctionName(), ff.literal(PATTERN),
                    ff.literal("not a valid time"), ff.literal("UTC")).evaluate(null);
            Assert.fail("Unexpected success");
        } catch (RuntimeException e) {
            Assert.assertEquals(FormatDateTimezoneFunction.NAME.getFunctionName()
                    + ": could not parse date: not a valid time", e.getMessage());
        }
    }

