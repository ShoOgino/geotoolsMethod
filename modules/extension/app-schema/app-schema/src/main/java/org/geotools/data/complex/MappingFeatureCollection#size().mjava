    /*
     * (non-Javadoc)
     *
     * @see org.geotools.feature.FeatureCollection#size()
     */
    @Override
    public int size() {
        try {
            return store.getCount(query);
        } catch (IOException e) {
            if (LOGGER.isLoggable(Level.WARNING))
                LOGGER.log(
                        Level.WARNING,
                        "Exception while computing collection size: " + e.getMessage());
            return 0;
        }
    }

