    @Override
    public boolean includeTable(String schemaName, String tableName, Connection cx)
            throws SQLException {
        if ("_GEODB".equals(tableName) || tableName.endsWith("_HATBOX")) {
            return false;
        }
        if ("GEOMETRY_COLUMNS".equalsIgnoreCase(tableName)) {
            return false;
        }

        return true;
    }

