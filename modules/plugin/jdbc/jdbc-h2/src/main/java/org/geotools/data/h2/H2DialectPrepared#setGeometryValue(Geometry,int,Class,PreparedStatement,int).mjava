    //prepared statement api
    //
    @Override
    public void setGeometryValue(Geometry g, int srid,
            Class binding, PreparedStatement ps, int column)
            throws SQLException {
        if ( g == null || g.isEmpty() ) {
            ps.setNull( column, Types.BLOB );
            return;
        }
        
        ps.setBytes( column, GeoDB.gToWKB(g) );
    }

