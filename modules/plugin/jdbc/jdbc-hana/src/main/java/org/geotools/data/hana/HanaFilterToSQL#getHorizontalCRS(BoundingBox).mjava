    private CoordinateReferenceSystem getHorizontalCRS(BoundingBox bbox) {
        CoordinateReferenceSystem crs = bbox.getCoordinateReferenceSystem();
        CoordinateReferenceSystem hcrs = null;
        if (crs != null) {
            hcrs = CRS.getHorizontalCRS(crs);
        }
        return hcrs;
    }

