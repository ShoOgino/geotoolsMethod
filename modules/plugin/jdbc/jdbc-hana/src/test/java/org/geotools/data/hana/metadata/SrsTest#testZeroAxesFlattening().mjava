            new Srs(
                    "WGS 84",
                    4326,
                    "EPSG",
                    4326,
                    WGS84_WKT,
                    WGS84_PROJ4,
                    "meter",
                    "degree",
                    Type.GEOGRAPHIC,
                    0.0,
                    null,
                    298.257223563,
                    -180.0,
                    180.0,
                    -90.0,
                    90.0);
