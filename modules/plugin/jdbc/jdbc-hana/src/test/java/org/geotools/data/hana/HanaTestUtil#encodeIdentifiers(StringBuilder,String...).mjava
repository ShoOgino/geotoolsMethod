    public static StringBuilder encodeIdentifiers(StringBuilder sb, String... ids) {
        boolean first = true;
        for (String id : ids) {
            if (id == null) {
                continue;
            }
            if (first) {
                first = false;
            } else {
                sb.append('.');
            }
            sb.append(HanaUtil.encodeIdentifier(id));
        }
        return sb;
    }

