    public static StringBuilder encodeIdentifiers(StringBuilder sb, String... ids) {
        boolean first = true;
        for (int i = 0; i < ids.length; ++i) {
            if (ids[i] == null) {
                continue;
            }
            if (first) {
                first = false;
            } else {
                sb.append('.');
            }
            sb.append('"');
            sb.append(ids[i]);
            sb.append('"');
        }
        return sb;
    }

