    @Override
    public void tearDown() throws Exception {
        
        // Removes the trigger from the table
        String sql = "DROP TRIGGER ";
        
        if (isPgsqlVersionGreaterThanEqualTo(new Version("8.2"))) {
            sql += "IF EXISTS ";
        }
        sql += "after_insert_trigger ON ft1;" ;
        
        run(sql);
        
        super.tearDown();
    }

