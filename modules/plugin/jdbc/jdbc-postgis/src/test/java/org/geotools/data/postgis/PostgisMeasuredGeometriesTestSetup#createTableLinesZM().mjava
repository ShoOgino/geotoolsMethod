        run(
                "CREATE TABLE lines_zm ("
                        + "  id INTEGER PRIMARY KEY,"
                        + "  description VARCHAR(250) NOT NULL,"
                        + "  geometry GEOMETRY(LineStringZM, 4326) NOT NULL"
                        + ");");
