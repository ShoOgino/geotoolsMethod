    public void encode(
            GeometryDescriptor gatt,
            String prefix,
            StringBuffer sql,
            boolean force2D,
            Double distance) {

        if (encodeBase64) {
            sql.append("encode(");
        }

        if (distance == null) {
            encodeNotSimplified(gatt, prefix, sql, force2D);
        } else {
            encodeSimplified(gatt, prefix, sql, force2D, distance);
        }

        if (encodeBase64) {
            sql.append(", 'base64')");
        }
    }

