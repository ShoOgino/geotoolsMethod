    public static void encodeGeometryValue(Geometry value, int srid, StringBuffer sql)
            throws IOException {

        if (value == null || value.isEmpty()) {
            sql.append("null");
            return;
        }

        String pattern = PARAMETER_LITERALS.get(value.getClass());
        if (pattern == null) { // should not happen
            sql.append("null");
            return;
        }
        sql.append(
                MessageFormat.format(
                        pattern,
                        new Object[] {new WKTWriter().write(value), Integer.toString(srid)}));
    }

