    @Override
    public void encodeGeometryColumn(
            GeometryDescriptor gatt, String prefix, int srid, Hints hints, StringBuffer sql) {
        if (this.usePreciseSpatialOps) {
            sql.append("ST_asWKB(");
        } else {
            sql.append("asWKB(");
        }
        encodeColumnName(prefix, gatt.getLocalName(), sql);
        sql.append(")");
    }

