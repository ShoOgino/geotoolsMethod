    @Override
    public void encodeGeometryValue(Geometry value, int dimension, int srid, StringBuffer sql) throws IOException {
        if (value != null) {
            sql.append("GeomFromText('") .append( new WKTWriter(dimension).write( value ) ).append( "',")
                    .append(srid).append(")");
        }
        else {
            sql.append("NULL");
        }
    }

