    @Override
    public Object DataSourceCreateLayer(
            Object dataSource, String name, Object spatialReference, long geomType, String[] opts) {
        return OGR_DS_CreateLayer(
                (Pointer<?>) dataSource,
                pointerToCString(name),
                (Pointer<?>) spatialReference,
                OGRwkbGeometryType.fromValue(geomType),
                BridjUtilities.pointerToCStrings(opts));
    }

