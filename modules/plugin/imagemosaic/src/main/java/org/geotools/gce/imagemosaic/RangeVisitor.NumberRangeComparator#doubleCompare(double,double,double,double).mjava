         */
        public static int doubleCompare(double beginFirst, double endFirst, double beginSecond,
                double endSecond) {
            if (beginFirst == beginSecond && endFirst == endSecond) {
                return 0;
            }
            if (beginFirst > beginSecond) {
                if (endFirst > endSecond) {
                    return +2;
                } else {
                    return +1;
                }
            } else {
                if (endFirst <= endSecond) {
                    return -2;
                } else {
                    return -1;
                }
            }
        }

