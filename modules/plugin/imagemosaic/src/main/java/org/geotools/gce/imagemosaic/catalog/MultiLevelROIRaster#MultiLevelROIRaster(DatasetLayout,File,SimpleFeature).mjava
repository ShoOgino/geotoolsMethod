        Geometry geo = (Geometry) sf.getDefaultGeometry();
        // Getting as envelope
        env = JTS.toEnvelope(geo);
        // Save envelope as Geometry
        footprint = JTS.toGeometry(env);
        // Getting the Mask provider
        maskOvrProvider = new MaskOverviewProvider(layout, file);

    }

