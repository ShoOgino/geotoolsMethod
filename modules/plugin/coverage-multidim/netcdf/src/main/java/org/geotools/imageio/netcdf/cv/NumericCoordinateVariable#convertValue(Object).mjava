    @Override
    protected T convertValue(Object o) {
        double val = ((Number) o).doubleValue();
        if (!Double.isNaN(scaleFactor)) {
            val *= scaleFactor;
        }
        if (!Double.isNaN(offsetFactor)) {
            val += offsetFactor;
        }
        try {
            return converter.convert(val, this.binding);
        } catch (Exception e) {
            throw new RuntimeException(e);
        }
    }

