    /**
     *
     * @param c
     * @param n
     *
     * @return
     */
    private static String repeat( char c, int n ) {
        if (n <= 0) {
            return ("");
        }

        StringBuffer s = new StringBuffer(n);

        for( int i = 0; i < n; i++ ) {
            s.append(c);
        }

        return s.toString();
    }

