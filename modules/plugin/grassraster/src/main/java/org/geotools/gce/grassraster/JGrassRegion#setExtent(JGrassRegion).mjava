    /**
     * Sets the extent of this window using another window.
     *
     * @param win another window object
     */
    public void setExtent(JGrassRegion region) {
        west = region.getWest();
        east = region.getEast();
        south = region.getSouth();
        north = region.getNorth();
        rows = region.getRows();
        cols = region.getCols();
        fixResolution();
        fixRowsAndCols();
    }

