    public ShpFilesLocker(URL url, FileReader reader) {
        this.url = url;
        this.reader = reader;
        this.writer = null;
        LOGGER.fine("Read lock: " + url + " by " + reader.id());
        setTraceException();

        // extracts the URI from the URL, if possible
        this.uri = getURI(url);
    }

