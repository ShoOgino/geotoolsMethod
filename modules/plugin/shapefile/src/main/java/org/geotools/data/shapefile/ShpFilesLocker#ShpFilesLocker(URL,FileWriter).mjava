    public ShpFilesLocker( URL url, FileWriter writer ) {
        this.url = url;
        this.reader = null;
        this.writer = writer;
        ShapefileDataStoreFactory.LOGGER.fine("Write lock: " + url + " by " + writer.id());
        setTraceException();
        
    	// extracts the URI from the URL, if possible
        this.uri = getURI(url);
    }

