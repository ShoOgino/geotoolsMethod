    /** Sets the shape ids */
    public void setShapesId(int[] ids) {
        if (ids == null) {
            this.numShapesId = 0;
        } else {
            this.shapesId = ids;
            this.numShapesId = 0;

            for (int id : ids) {
                if (id == -1) {
                    break;
                }

                this.numShapesId++;
            }
        }
    }

