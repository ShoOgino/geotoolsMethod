    @Test
    public void testSkippingRecords() throws Exception {
        final URL url = TestData.url(STATEPOP);
        try (ShapefileReader r =
                new ShapefileReader(new ShpFiles(url), false, false, new GeometryFactory())) {
            int idx = 0;
            while (r.hasNext()) {
                idx++;
                r.nextRecord();
            }
            assertEquals(49, idx);
        }
    }

