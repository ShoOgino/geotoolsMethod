    @Test
    public void testRemoveCounting() throws Exception {
        FidIndexer.generate(backshp.toURI().toURL());
        initWriter();
        writer.next();
        writer.remove();
        writer.next();
        writer.remove();
        writer.next();
        writer.remove();

        while( writer.hasNext() ) {
            writer.next();
            writer.write();
        }

        close();
        IndexedFidReader reader = new IndexedFidReader(shpFiles);
        try {
            assertEquals(3, reader.getRemoves());
        } finally {
            reader.close();
        }

        // remove some more features
        initWriter();
        writer.next();
        writer.next();
        writer.next();
        writer.remove();
        writer.next();
        writer.remove();
        writer.next();
        writer.next();
        writer.next();
        writer.remove();
        while( writer.hasNext() ) {
            writer.next();
            writer.write();
        }

        close();

        reader = new IndexedFidReader(shpFiles);
        try {
            assertEquals(6, reader.getRemoves());
        } finally {
            reader.close();
        }

    }

