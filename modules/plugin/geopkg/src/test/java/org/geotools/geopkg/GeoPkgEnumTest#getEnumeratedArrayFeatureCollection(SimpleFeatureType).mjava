    private ListFeatureCollection getEnumeratedArrayFeatureCollection(SimpleFeatureType schema)
            throws ParseException {
        SimpleFeatureBuilder fb = new SimpleFeatureBuilder(schema);
        SimpleFeature f1 =
                fb.buildFeature(
                        null,
                        new Object[] {
                            new WKTReader().read("POINT(0 0)"),
                            1,
                            new Integer[] {1},
                            new String[] {"a"},
                            new String[] {"one"}
                        });
        SimpleFeature f2 =
                fb.buildFeature(
                        null,
                        new Object[] {
                            new WKTReader().read("POINT(0 0)"),
                            2,
                            new Integer[] {2, 2},
                            new String[] {"a", "b"},
                            new String[] {"one", "two"}
                        });
        SimpleFeature f3 =
                fb.buildFeature(
                        null,
                        new Object[] {
                            new WKTReader().read("POINT(0 0)"),
                            3,
                            new Integer[] {3, 3, 3},
                            new String[] {"a", "b", "c"},
                            new String[] {"one", "two", "three"}
                        });
        SimpleFeature f4 =
                fb.buildFeature(
                        null,
                        new Object[] {new WKTReader().read("POINT(0 0)"), 4, null, null, null});
        return new ListFeatureCollection(schema, new SimpleFeature[] {f1, f2, f3, f4});
    }

