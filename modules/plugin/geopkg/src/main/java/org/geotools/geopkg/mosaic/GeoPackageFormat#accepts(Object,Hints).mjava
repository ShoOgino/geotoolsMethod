    @Override
    public boolean accepts(Object source, Hints hints) {
        if (source == null) {
            return false;
        }

        File sourceFile = getFileFromSource(source);

        if (sourceFile == null) {
            return false;
        }
        
        //TODO: check if it is proper sqlite and geopackage file
        return sourceFile.getName().endsWith(".gpkg");
    }

