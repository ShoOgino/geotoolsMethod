    private DBCollection grabDBCollection(
            MongoClient client, String dbName, String dbcName, boolean init)
            throws UnknownHostException {
        DB db = client.getDB(dbName);
        DBCollection dbc = db.getCollection(dbcName);
        if (init) {
            dbc.dropIndexes();
            dbc.drop();
        }
        return dbc;
    }

