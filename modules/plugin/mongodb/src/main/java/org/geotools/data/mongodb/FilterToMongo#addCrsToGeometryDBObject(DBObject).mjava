    void addCrsToGeometryDBObject(DBObject geometryDBObject) {
        geometryDBObject.put(
                "crs",
                BasicDBObjectBuilder.start()
                        .add("type", "name")
                        .push("properties")
                        .add("name", "urn:x-mongodb:crs:strictwinding:EPSG:4326")
                        .get());
    }

