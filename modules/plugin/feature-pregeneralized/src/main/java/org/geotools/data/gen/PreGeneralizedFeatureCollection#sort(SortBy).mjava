    public SimpleFeatureCollection sort(SortBy sortBy) {
        SimpleFeatureCollection fColl = backendCollection.sort(sortBy);
        if (fColl == null) return null;
        return new PreGeneralizedFeatureCollection(
                fColl,
                featureType,
                returnedFeatureType,
                indexMapping,
                geomPropertyName,
                backendGeomPropertyName);
    }

