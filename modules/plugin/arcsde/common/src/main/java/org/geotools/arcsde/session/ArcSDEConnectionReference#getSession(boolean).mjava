    @Override
    public ISession getSession(final boolean transactional)
            throws IOException, UnavailableConnectionException {
        if (cached == null) {
            ISession session = super.getSession(transactional); // this will block if session is
            // already in use
            this.cached =
                    new SessionWrapper(session) {
                        @Override
                        public void dispose() {
                            // ignore
                        }
                    };
        }
        return cached;
    }

