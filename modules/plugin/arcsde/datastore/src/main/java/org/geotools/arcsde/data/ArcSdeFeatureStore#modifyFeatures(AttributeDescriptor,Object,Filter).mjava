    /** @see FeatureStore#modifyFeatures(AttributeDescriptor, Object, Filter) */
    public final void modifyFeatures(
            final AttributeDescriptor type, final Object value, final Filter filter)
            throws IOException {
        modifyFeatures(
                new Name[] {
                    type.getName(),
                },
                new Object[] {
                    value,
                },
                filter);
    }

