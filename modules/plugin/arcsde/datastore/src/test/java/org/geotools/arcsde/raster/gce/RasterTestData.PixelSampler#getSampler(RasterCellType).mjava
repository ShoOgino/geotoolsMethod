        public static PixelSampler getSampler(final RasterCellType pixelType) {
            PixelSampler sampler = byPixelTypeSamplers.get(pixelType);
            if (sampler == null) {
                throw new NoSuchElementException("no pixel sampler exists for pixel type "
                        + pixelType);
            }
            return sampler;
        }

