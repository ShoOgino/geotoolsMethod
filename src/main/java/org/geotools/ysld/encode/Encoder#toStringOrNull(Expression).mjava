    String toStringOrNull(Expression expr) {
        String str = expr != null ? ECQL.toCQL(expr) : null;
        if (str != null) {
            // strip quotes
            if (str.charAt(0) == '\'') {
                str = str.substring(1);
            }
            if (str.charAt(str.length()-1) == '\'') {
                str = str.substring(0, str.length()-1);
            }
        }
        return str;
    }

